        <TextView
            android:id="@+id/content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_tv"
            android:layout_marginTop="@dimen/dp_12"
            android:maxEms="15"
            android:maxLines="3"
            android:text="" />

